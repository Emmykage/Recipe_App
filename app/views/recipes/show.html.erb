<h1 class="title"><%= @recipe.name %></h1>
<div class="times_container">
  <div class="times">
    <p>Preparation time: <%= @recipe.preparation_time%></p>
    <p>Cooking time: <%= @recipe.cooking_time%></p>
  </div>
  <div class="toggle">
    <% if @recipe.public %>
      <label for="check1">Public</label>
    <% else %>
      <label for="check2">Private</label>
    <% end %> 
  </div>
</div>
<div class="description">
  <p><%= @recipe.description %></p>
</div>
<div class="buttons">
  <%# <%= link_to "Generate shopping list", shopping_list_path(recipe_id: params[:id]), method: :get, class:"generate" %>
  <%= link_to "Add Ingredient", recipe_path(@recipe), class:"add_ingredient" %>
</div>
<div class="table_container">
  <table class="table">
    <thead>
      <tr >
        <th class="col">Food</th>
        <th class="col">Quantity</th>
        <th class="col">Value</th>
        <th class="col">Actions</th>
      </tr>
    </thead>
    <tbody>

    <% @recipe.recipe_foods.includes([:food]).each do |food| %>
      <tr >
        <td><%= food.food.name %></td>
        <td><%= "#{food.quantity}" %></td>
        <td><%= "#{food.food.price}" %></td>

        <td class="buttons">
          <%= link_to "Modify", edit_recipe_recipe_food_path(@recipe, food), class:"modify"  %>
          <%= button_to "Delete", recipe_recipe_food_path(@recipe, food), method: :delete , class:"delete" %>
        </td>

      </tr>
      <% end %>
    </tbody>
  </table>
</div>

