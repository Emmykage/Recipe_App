<h1 class="title"><%= @inventory.name %></h1>     
<div class="table_container">
  <table class="table">
    <thead>
      <tr >
        <th class="col">Food</th>
        <th class="col">Measurement unit</th>
        <th class="col">Unit price</th>
        <th class="col">Actions</th>
      </tr>
    </thead>
    <tbody>

    <% @inventory.inventory_foods.includes([:food]).each do |food| %>
      <tr >
        <td><%= food.food.name %></td>
        <td><%= "#{food.food.measurement_unit}" %></td>
        <td><%= "#{food.food.price}" %></td>

        <td class="buttons">
          <%= button_to "Remove", recipe_recipe_food_path(@recipe, food), method: :delete , class:"delete" %>
        </td>

      </tr>
      <% end %>
    </tbody>
  </table>
</div>
